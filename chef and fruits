#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0)
	{
	    int n,m,k;
	    int d=0;
	    cin>>n>>m>>k;
	    for(int i=1;i<=k;i++)
	    {
	        if(n>m)
	        {
	            m=m+1;
	            
	        }
	        else if(m>n) {
	            n=n+1;
	        }
	        else{
	            m=n;
	        }
	    }
	    if(m>n)
	    {
	        d=m-n;
	    }
	    else if(n>m)
	    {
	        d=n-m;
	    }
	    else{
	        d=m-n;
	    }
	    cout<<d<<endl;
	 t--;   
	}
	
	return 0;
}
