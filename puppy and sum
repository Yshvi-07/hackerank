#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0)
	{
	    long d,n;
	    cin>>d>>n;
	   // long x=n*d;
	    long sum=0;
	    for(int i=1;i<=d;i++)
	    {
	       sum=(n*(n+1))/2;
	       n=sum;
	    }
	    cout<<sum<<endl;
	    t--;
	}
	return 0;
}
