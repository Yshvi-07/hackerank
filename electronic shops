#include <bits/stdc++.h>

using namespace std;

int main()
{
    int x=-1;
    int b;
    cin>>b;
    int max=-1;
    int n;
    int m;
    cin>>n>>m;
    int a[n];
    int c[m];
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        
    }
    for(int j=0;j<m;j++)
    {
        cin>>c[j];
    }
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            if((a[i]+c[j]>max)&&(a[i]+c[j]<=b)){
                max=a[i]+c[j];
               
        }  
        } 
           
    }

   cout<<max<<endl;
   return 0;
}
  
