#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int n;
    int y;
    int s1=0;
    int s2=0;
    
    cin>>n;
    int ar[n][n];
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cin>>ar[i][j];
            
        }
    }
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
           // cin>>arr[i][j];
            
            if(ar[i]==ar[j])
            {
                s1=s1+ar[i][j];
                
            }
            if((i+j)==n-1)
            {
                
               s2=s2+ar[i][j];
            }  
            
            
            
        }

        
     
    }
    y=s1+s2;
    
    cout<<y<<endl;
    return 0;
}
