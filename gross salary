#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0)
	{
	    double g=0;
	    double b;
	    cin>>b;
	    if(b<1500)
	    {
	        g=b+(0.1*b)+(0.9*b);
	    }
	    else
	    {
	        g=b+500+(0.98*b);
	    }
	    cout<<fixed<<setprecision(2)<<g<<endl;
	    t--;
	}
	
	return 0;
}
