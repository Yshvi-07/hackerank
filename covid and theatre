#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0)
	{
	    int r,p;
	    int flag=0;
	    cin>>r>>p;
	    for(int i=1;i<=r;i++)
	    {
	       
	        for(int j=1;j<=p;j++)
	        {
	       
	          if(((i+j)%2==0)&&(i%2!=0)&&(j%2!=0)){
	             flag++;
	          }
	        }  
	    }
	   cout<<flag<<endl;
	   t--;
	}
	return 0;
}
